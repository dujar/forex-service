{
	"compilerOptions": {
		"module": "commonjs",
		"sourceMap": true,
		"target": "es6",
		"noImplicitAny": false,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es5", "es6"
		],
		"baseUrl": ""
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
